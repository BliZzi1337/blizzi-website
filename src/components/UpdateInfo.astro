---
import { readFile } from 'node:fs/promises';
import { join } from 'node:path';

let timestamps = {
  marbles: null,
  gold: null,
  lastGenerated: null
};

try {
  const timestampsPath = join(process.cwd(), 'src', 'data', 'timestamps.json');
  const fileContent = await readFile(timestampsPath, 'utf-8');
  timestamps = JSON.parse(fileContent);
} catch (error) {
  console.warn('Timestamps nicht gefunden:', error.message);
}

const formatDate = (dateString) => {
  if (!dateString) return 'Noch nicht aktualisiert';
  
  const date = new Date(dateString);
  return date.toLocaleDateString('de-DE', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
};
